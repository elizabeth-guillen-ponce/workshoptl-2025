<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WorkShop.Titles" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WorkShop.Subtitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WorkShop.Card.Numbers" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="WorkShop.Input.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple</item>
        <item name="hintTextColor">@color/purple</item>
    </style>
